    <script>
        // Initialize Icons
        lucide.createIcons();

        const modal = document.getElementById('negotiator-modal');
        const chatBox = document.getElementById('chat-messages');
        const userInput = document.getElementById('user-input');

        function openNegotiator(name) {
            document.getElementById('product-name').innerText = name;
            modal.classList.remove('hidden');
            
            // Initial AI Greeting
            addMessage('ai', `ุณูุงู! ูู ุฏุณุชุงุฑ ููุดููุฏ ูุฑูุดูุฏู ูุณุชู. ุฏุฑ ููุฑุฏ "${name}" ฺู ูพุดููุงุฏ ุฏุงุฑุฏุ ูู ูุฏุฑุช ุชุงุฏ ููุช ุชุง ฑฐูช ุชุฎูู ุฑุง ุฏุงุฑู.`);
        }

        function closeNegotiator() {
            modal.classList.add('hidden');
            chatBox.innerHTML = '';
        }

        function addMessage(sender, text) {
            const msgDiv = document.createElement('div');
            msgDiv.className = `max-w-[80%] p-4 rounded-3xl text-sm leading-relaxed ${sender === 'ai' ? 'bg-slate-800 self-start rounded-tr-none' : 'bg-blue-600 text-white self-end rounded-tl-none'}`;
            msgDiv.innerText = text;
            chatBox.appendChild(msgDiv);
            chatBox.scrollTop = chatBox.scrollHeight;
        }

        function sendMessage() {
            const text = userInput.value.trim();
            if (!text) return;

            addMessage('user', text);
            userInput.value = '';

            // Simulate AI Delay
            setTimeout(() => {
                const responses = [
                    "ูพุดููุงุฏ ุดูุง ุฑุง ุจุฑุฑุณ ฺฉุฑุฏู. ููุช ฺฉู ูพุงู ุงุณุชุ ุขุง ูโุชูุงูุฏ ฺฉู ุจุงูุงุชุฑ ุจุงุฏุ",
                    "ูู ุจุง ุณุณุชู ุชุญูู ููุช ุฌูุงู ฺฺฉ ฺฉุฑุฏูุ ุงู ููุช ููุตูุงูู ุงุณุช.",
                    "ุจุณุงุฑ ุนุงู! ุงฺฏุฑ ุงูุงู ูุนุงููู ุฑุง ููุง ฺฉูุฏุ ูุฒูู ุงุฑุณุงู ุฑุง ุฑุงฺฏุงู ูโฺฉูู.",
                    "ุณุณุชู ููุดููุฏ ุชุงุฏ ฺฉุฑุฏ. ููฺฉ ูพุฑุฏุงุฎุช ุจุฑุง ุดูุง ุตุงุฏุฑ ุดุฏุ"
                ];
                const randomResponse = responses[Math.floor(Math.random() * responses.length)];
                addMessage('ai', randomResponse);
            }, 1000);
        }
    </script>
